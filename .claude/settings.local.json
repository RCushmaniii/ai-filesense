{
  "defaultMode": "acceptEdits",

  "permissions": {
    "allow": [
      "Bash",
      "Read(**)",
      "Write(**)",
      "Edit(**)",
      "Git"
    ],

    "deny": [
      "Bash(rm -rf /)",
      "Bash(curl:*)",
      "Bash(wget:*)",

      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",

      "Write(/etc/**)",
      "Write(/bin/**)",
      "Write(/usr/**)",
      "Write(C:\\Windows\\**)"
    ]
  }
}
